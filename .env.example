# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nodo_ia_dev
DB_USER=postgres
DB_PASS=password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRATION=7d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=your_email_password
EMAIL_FROM=Nodo.ia <noreply@yourdomain.com>

# For development, you can use Ethereal Email
# ETHEREAL_USER=ethereal_user
# ETHEREAL_PASS=ethereal_password

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# URLs
FRONTEND_URL=http://localhost:3001
API_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # 100 requests per 15 minutes

# Logging
LOG_LEVEL=debug

# Security
CORS_ORIGINS=http://localhost:3001,http://localhost:3002
CRYPTO_SALT_ROUNDS=10
VERIFICATION_TOKEN_EXPIRY=86400000  # 24 hours in milliseconds
PASSWORD_RESET_TOKEN_EXPIRY=3600000 # 1 hour in milliseconds
TEAM_INVITE_TOKEN_EXPIRY=604800000  # 7 days in milliseconds

# Free Plan Configuration
FREE_PLAN_LISTING_LIMIT=5

# Promo Credits
SINGLE_CREDIT_PRICE=999
CREDIT_PACK_5_PRICE=3995
CREDIT_PACK_10_PRICE=6995

# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Apple Sign In credentials
APPLE_CLIENT_ID=your.apple.client.id.here
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_REDIRECT_URI=https://your-app-redirect-uri.com/callback
# Private key for Apple Sign In (from Apple Developer Portal)
# Replace newlines with \n for ENV file
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----

# Testing
# JWT token for testing authenticated endpoints (get this from the dummy auth endpoint)
TEST_JWT_TOKEN=your_test_jwt_token_here

# API base URL (for tests)
API_BASE_URL=http://localhost:3000 